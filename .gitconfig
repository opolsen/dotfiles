[user]
    name = Ole-Petter Olsen
    email = opolsen@gmail.com
[push]
    default = simple
[branch]
    autosetuprebase = always
[core]
    excludesfile = ~/.gitignore_global
    editor = vim
[help]
    autocorrect = 5
[rerere]
    enabled = true
[color]
    ui = true
[credential]
    helper = cache --timeout=3600
[merge]
    tool = vimdiff
[mergetool]
    keeptemporaries = false
    keepbackups = false
    prompt = false
    trustexitcode = false
[alias]
    last = log -1 --stat
    cp = cherry-pick
    co = checkout
    cl = clone
    ci = commit
    st = status -sb
    br = branch
    unstage = reset HEAD --
    dc = diff --cached
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
    stats = shortlog -s -n -e --no-merges
[diff]
    compactionHeuristic = true
[pull]
    rebase = true
